{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "ES2017",
            "ESNext.AsyncIterable"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "pretty": true,
        "outDir": "./build",
        "allowJs": true,
        "noEmit": false,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}